{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": false,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDirs": [
      "/scripts",
      "./test",
      "./typechain"
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "./scripts",
    "./test",
    "./typechain",
    "./src/**/*"
  ],
  "files": [
    "./hardhat.config.js"
  ]
}
